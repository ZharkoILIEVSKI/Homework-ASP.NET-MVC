

@model BurgerViewModel

<h3>Create order:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="Location" class="custom-control-label"></label>
                <input type="text" asp-for="Location" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BurgerName" class="control-label"></label>
                <select class="form-control" asp-for="BurgerName" asp-items="Html.GetEnumSelectList<BurgerName>()"></select>
            </div>

            <div class="form-group">
                <label asp-for="Vegetarian" class="control-label"></label>
                <input type="checkbox" asp-for="Vegetarian"/>
            </div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" asp-items="@(new SelectList(ViewBag.Users, "Id", "FullName"))"></select>
            </div>

            <button type="submit" class="btn btn-outline-success">Create</button>
        </form>
    </div>
</div>
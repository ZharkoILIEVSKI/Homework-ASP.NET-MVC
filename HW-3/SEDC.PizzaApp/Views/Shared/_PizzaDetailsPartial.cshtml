@using SEDC.PizzaApp.Models.Domain
@using SEDC.PizzaApp.Mappers

@model List<Pizza>

<h2>Users: </h2>

<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>@Model.ElementAt(i).Name</li>
        <li>@Model.ElementAt(i).PizzaSize</li>
        <li>@Model.ElementAt(i).Price</li>
    }
</ul>